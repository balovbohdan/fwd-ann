{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"]
  }
}
